<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/lockScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="@string/lockscreen_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/lockScreenReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lockScreenTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="@string/lockscreen_reason" />

    <Button
        android:id="@+id/lockScreenUnlockButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lockScreenTitle"
        android:layout_alignRight="@+id/lockScreenTitle"
        android:layout_below="@+id/lockScreenReason"
        android:layout_marginTop="69dp"
        android:text="@string/lockscreen_unlock_button" />

</RelativeLayout>